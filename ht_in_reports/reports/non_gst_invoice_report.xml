<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="in_report">
            <t>
                <div class="header">

                    <div style="align:left; float:left; width:25%; padding:10px; height:100px;" >
                        <img t-attf-src="data:image/png;base64,{{res_company.logo}}" style="width:100px;height:100px;"/>
                    </div>
                    <div style="text-align:center; float:left; width:60%; padding:10px; height:100px;" >
                        <h4><span t-field="doc.partner_id" /></h4>
                            <h6>GSTIN: <span t-field="doc.gst_number"/></h6>
                            <h6><span t-field="doc.partner_id.street" />
                            <span t-field="doc.partner_id.street2" />
                            <span t-field="doc.partner_id.city" />
                            <span t-field="doc.partner_id.state_id" />
                            <span t-field="doc.partner_id.zip" />
                            <span t-field="doc.partner_id.country_id" /></h6>
                    </div>
                    <div style="float:left; padding:10px; height:100px;">
                        
                    </div>

                </div>
                <div style="text-align:center" >
                    <h3> INVOICE </h3>
                </div>
                
                <table class="table table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th >Invoice No:</th>
                            <th>Balance Due:</th>
                            <th>Invoice Date:</th>
                            <th>Payment Term:</th>
                            <th>Due Date:</th>
                        </tr>
                    </thead>
                    <tbody align="center">
                        <tr>
                            <td>
                                <t t-esc="doc.name"/>
                            </td>
                            <td>
                                <strong><t t-esc="doc.amount_residual"/></strong>
                            </td>
                            <td>
                                <span t-field="doc.invoice_date" t-options='{"format": "dd/MM/yyyy"}'/>
                            </td>
                            <t t-if="doc.invoice_payment_term_id">
                                <td>
                                    <t t-esc="doc.invoice_payment_term_id.name"/>
                                </td>
                            </t>
                            <td>
                                <t t-if="doc.invoice_date_due">
                                    <span t-field="doc.invoice_date_due" t-options='{"format": "dd/MM/yyyy"}'/>
                                </t>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <br/>
                <br/>
                <br/>
                <div>
                    <table class="table table-sm o_main_table" name="inherit_invoice_line_table" style="width:100%; font-family:verdana">
                        <thead style="background-color:#535453; color:#f2f7f2; font-size:19px">
                            <t t-if="doc.invoice_line_ids" >
                                <tr >
                                    <th>Product</th>
                                    <th>Qty</th>
                                    <th>Price</th>
                                    <th>Subtotal</th>
                                </tr>
                            </t>
                        </thead>
                        <tbody class="invoice_tbody" style="font-size:14px">
                            <tr t-foreach="doc.invoice_line_ids" t-as="line" >
                                <td style="border-bottom: 1px solid gray;"><span t-field="line.product_id" /></td>
                                <td style="text-align:right; border-bottom: 1px solid gray;"><span t-field="line.quantity"/></td>
                                <td style="text-align:right; border-bottom: 1px solid gray;"><span t-field="line.price_unit"/></td>
                                <td style="text-align:right; border-bottom: 1px solid gray;"><span t-field="line.price_subtotal"/></td>
                            </tr>

                        </tbody>
                    </table>     
                </div>

                <div align="right">
                    <table style="border-bottom: 1px solid gray; width:30%">
                        <tr>
                            <td>
                            </td>
                            <td align="right">
                                <div id="total" class="row" >
                                    <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                        <table class="table table-sm" style="page-break-inside: avoid; width:50%">
                                            <tbody class="invoice_tbody">
                                            
                                                <tr >
                                                    <td><strong>Total</strong></td>
                                                    <td class="text-right">
                                                        <span class="text-nowrap" t-field="doc.amount_untaxed"/>
                                                    </td>
                                                </tr>
                                                <!-- <t >
                                                    <t>
                                                        <tr class="border-black">
                                                            <td><strong>Amount Due</strong></td>
                                                            <td class="text-right">
                                                                <span t-field="doc.amount_residual"/>
                                                            </td>
                                                        </tr>
                                                    </t>
                                                </t> -->
                                            </tbody>
                                        </table>
                                    </div>
                                </div> 
                            </td>
                        </tr>
                    </table>
                </div>
                
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <t t-foreach="doc.company_id" t-as="rec">
                    <strong>Name</strong>
                    <span t-field="rec.name"/>
                    <br/>
                    <strong>Account Number</strong>
                    <span t-field="rec.Acc_num"/>
                    <br/>
                    <strong> IFSC:</strong>
                    <span t-field="rec.ifsc_code"/>
                    <br/>
                    <strong> Swift Code:</strong>
                    <span t-field="rec.swift_code"/>
                </t>
                <br/>
                <br/>
                <br/>      
                <strong>Terms and conditions:</strong>
                <p><span t-field="doc.narration"/></p>
                <br/>
                <br/>

                <div class="footer">
                    <div class="text-center" style="border-top: 1px solid black;">
                        <ul class="list-inline">
                            <li>Page:</li>
                            <li><span class="page"/></li>
                        </ul>
                    </div>
                </div>
            </t>   
            <br/>
            <br/>
            <br/> 

        </template>     

        <template id="invoice_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="ht_in_reports.in_report"/>
                </t>
            </t>
        </template>       

        <record id="action_in_report" model="ir.actions.report">
            <field name="name"> Non GST Invoice</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ht_in_reports.invoice_report_template</field>
            <field name="report_file">ht_in_reports.invoice_report_template</field>
            <field name="binding_model_id" ref="model_account_move"/>
            <field name="print_report_name">(object.partner_id.name)</field>
        </record>
    </data>
</odoo>