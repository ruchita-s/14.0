<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="in_report">
            <t>
                <div class="header" t-att-style="report_header_style">
                    <div align="left">
                        <img t-attf-src="data:image/png;base64,{{res_company.logo}}" style="width:150px;height:60px;"/>
                    </div>
                    <div text-align="center" align="right">
                        <h3><span t-field="doc.name" /></h3>
                        <h5>GSTIN: <span t-field="doc.gst_no"/></h5>
                        <span t-field="doc.street1" />
                        <span t-field="doc.street2" />
                        <span t-field="doc.city" />
                        <span t-field="doc.state"/>
                        <span t-field="doc.pin_code" />
                        <span t-field="doc.country" />
                    </div>
                </div>

                <div class="row mt32 mb32" id="invoice">
                    <div class="col-auto col-3 mw-100 mb-2">
                        <p><h1>INVOICE</h1>
                        <strong><span t-field="doc.inv_num"/></strong></p>
                        <br/>
                        <br/>
                        <p><strong>Balance Due:</strong>
                        <br/>
                        <strong><span t-field="doc.balance_due"/></strong></p>
                    </div>
                    <div class="col-auto col-3 mw-100 mb-2">
                        <strong>Invoice Date:</strong>
                        <span t-field="doc.inv_date" t-options='{"widget": "date"}'/>
                        <p><strong>Terms:</strong>
                        <span t-field="doc.due_date"/></p>
                        <p><strong>Due Date:</strong>
                        <span t-field="doc.due_date"/></p>
                        <br/>
                    </div>
                </div>
                <br/>

                <div class="row" id="hash_last_div">
                    <div class="col-12" id="hash_chain_compliant">
                        <br/>
                        <h6>
                            The hash chain is compliant: it is not possible to alter the
                            data without breaking the hash chain for subsequent parts.
                        </h6>
                        <br/>
                    </div>
                </div>
                <!-- <table class="table table-striped">
                    <h3>Report Lines</h3>
                        <t t-if="doc.line_ids">
                            <tr>
                                <th>Trainee Analysis Id</th>
                                <th>Measure</th>
                                <th>Need Improvement</th>
                                <th>Analysis Date</th>
                                <th>Training Required</th>
                            </tr>
                        </t>
                        <tbody>
                            <tr t-foreach="doc.line_ids" t-as="doc">
                                <td><span t-field="doc.trainee_analysis_id"/></td>
                                <td><span t-field="doc.measure"/></td>
                                <td><span t-field="doc.improve"/></td>
                                <td><span t-field="doc.analysis_date"/></td>
                                <td><span t-field="doc.need_more"/></td>
                            </tr>
                        </tbody>
                </table>        -->   
            </t>       
        </template>     

        <template id="invoice_report_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="ht_in_reports.in_report"/>
                </t>
            </t>
        </template>       

        <record id="action_in_report" model="ir.actions.report">
            <field name="name">Invoice for members</field>
            <field name="model">in.report</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ht_in_reports.invoice_report_template</field>
            <field name="report_file">ht_in_reports.invoice_report_template</field>
            <field name="binding_model_id" ref="model_in_report"/>
            <field name="print_report_name">(object.name)</field>
        </record>
    </data>
</odoo>