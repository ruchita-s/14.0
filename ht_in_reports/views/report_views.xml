<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--tree view for course -->
        <record id="report_tree_view" model="ir.ui.view">
            <field name="name">PDF Report</field>
            <field name="model">in.report</field>
            <field name="arch" type="xml">
                <tree string="Invoice Lines">
                    <field name='name'/>
                    <field name='city' />
                    <field name='state'/>
                    <field name='pin_code' />
                    <field name='country'/>
                    <field name='inv_date'/>
                </tree>
            </field>
        </record>

        <!--form view for course -->
        <record id="report_form_view" model="ir.ui.view">
            <field name="name">PDF Report</field>
            <field name="model">in.report</field>
            <field name="arch" type="xml">
                <form string="Invoice lines">
                    <sheet>
                        <!--seperate all the details in groups -->
                        <group>
                            <group>
                                <strong><h1><field name='name'/></h1></strong>
                            </group>
                           
                            
                        </group>
                        <group name="personal_info" string="Personal">
                            <div class="o_address_format" >
                                <field name="street1" nolabel='1' placeholder='Street 1' class="o_address_street"/>
                                <field name="street2" class="o_address_street" nolabel='1' placeholder='Street 2'/>
                                <field name='city' placeholder='city' nolabel='1' class="o_address_city"/>
                                <field name='state' placeholder='State' nolabel='1' class="o_address_state" />
                                <field name='pin_code' placeholder='Zipcode' nolabel='1' class="o_address_zip"/>
                                <field name='country' placeholder='country' class="o_address_country" />
                            </div>
                            <group >
                                <field name='inv_date'/>
                                <field name='due_date' />
                                <field name='gst_no'/>
                                <field name='inv_num'/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Customer Products">
                                <field name="pro_line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id" />
                                        <field name="name" />
                                        <field name='product_uom_qty'/>
                                        <field name='price_unit'/>
                                        <field name="tax_id" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--action for report model -->
        <record id="action_report_form" model="ir.actions.act_window">
            <field name="name">PDF Reports</field>
            <field name="res_model">in.report</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!--Menu action of report model-->
        <menuitem
            id="invoice_menu"
            name="Reports"
            />

        <menuitem
            action="action_report_form"
            id="invoice_report"
            name="In Report"
            parent="invoice_menu"
            sequence="1"/>
    </data>
</odoo>


